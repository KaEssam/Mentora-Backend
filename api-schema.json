    "UserIdParameter": {
      "$id": "https://mentora.api/schemas/user-id-parameter.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "User ID Parameter",
      "description": "Route parameter for user ID",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique user identifier",
          "example": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
        }
      },
      "required": ["id"],
      "additionalProperties": false
    },
    "UpdateProfileRequest": {
      "$id": "https://mentora.api/schemas/update-profile-request.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "Update Profile Request",
      "description": "Request body for updating user profile",
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "User's first name",
          "example": "John"
        },
        "lastName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "User's last name",
          "example": "Doe"
        },
        "bio": {
          "type": "string",
          "description": "User's biography or professional summary",
          "example": "Senior software engineer with 10 years of experience"
        },
        "title": {
          "type": "string",
          "description": "Professional title",
          "example": "Senior Software Engineer"
        },
        "company": {
          "type": "string",
          "description": "Current company",
          "example": "Tech Corp"
        },
        "location": {
          "type": "string",
          "description": "User's location",
          "example": "San Francisco, CA"
        },
        "skills": {
          "type": "string",
          "description": "Comma-separated list of skills",
          "example": "JavaScript, React, Node.js, Python"
        },
        "languages": {
          "type": "string",
          "description": "Comma-separated list of languages",
          "example": "English, Spanish"
        },
        "experienceYears": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Years of professional experience",
          "example": 10
        },
        "education": {
          "type": "string",
          "description": "Educational background",
          "example": "BS in Computer Science"
        },
        "socialMedia": {
          "type": "string",
          "description": "Social media links or handles",
          "example": "LinkedIn: linkedin.com/in/johndoe"
        },
        "profileImage": {
          "type": "string",
          "format": "binary",
          "description": "Profile image file (multipart form data)",
          "contentEncoding": "base64"

    "UserSearchParameters": {
      "$id": "https://mentora.api/schemas/user-search-parameters.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "User Search Parameters",
      "description": "Query parameters for user search",
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Search query for name, bio, or title",
          "example": "software engineer"
        },
        "skills": {
          "type": "string",
          "description": "Filter by skills (comma-separated)",
          "example": "JavaScript,React"
        },
        "location": {
          "type": "string",
          "description": "Filter by location",
          "example": "San Francisco"
        }
      },
      "additionalProperties": false
    },
    "UserSearchResponse": {
      "$id": "https://mentora.api/schemas/user-search-response.json",
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "title": "User Search Response",
      "description": "Response containing list of users matching search criteria",
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "description": "Array of users matching search criteria",
          "items": {
            "$ref": "#/definitions/UserEntity"
          }
        },
        "totalCount": {
          "type": "integer",
          "description": "Total number of users found",
          "example": 25
        }
      },
      "required": ["users", "totalCount"],
      "additionalProperties": false
    }
  }
